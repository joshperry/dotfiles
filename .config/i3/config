}

# Media volume keys
# Want: notify-send "volume up `awk -F\"[][]\" '/dB/ { print $2 }' <(amixer sget Master)`"
#bindsym XF86AudioRaiseVolume exec "amixer -q -c2 set Headphone 2dB+ unmute; notify-send 'volume up'"
#bindsym XF86AudioLowerVolume exec "amixer -q -c2 set Headphone 2dB- unmute; notify-send 'volume down'"
#bindsym XF86AudioMute exec "amixer -q -c2 sset Headphone toggle; notify-send 'mute toggle'"

bindsym XF86AudioRaiseVolume exec "amixer -q set Master 2dB+ unmute; notify-send 'volume up'"
bindsym XF86AudioLowerVolume exec "amixer -q set Master 2dB- unmute; notify-send 'volume down'"
bindsym XF86AudioMute exec "amixer -q set Master toggle; notify-send 'mute toggle'"

# Screen brightness controls with notification
# https://cialu.net/brightness-control-not-work-i3wm/
# increase screen brightness with notification
bindsym XF86MonBrightnessUp exec "light -A 5; notify-send 'brightness up'"
# decrease screen brightness with notification
bindsym XF86MonBrightnessDown exec "light -U 5; notify-send 'brightness down'"

