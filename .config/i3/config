# move focused workspace between monitors
bindsym $mod+Ctrl+l move workspace to output right
bindsym $mod+Ctrl+h move workspace to output left

# scrot & gimp - root
bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# scrot to clipboard - select window or rectangle
bindsym --release $mod+Print exec scrot -s -e 'xclip -selection clipboard -t image/png $f && rm $f'
# scrot to file - select window or rectangle
bindsym --release $mod+Shift+Print exec scrot -s -e 'mv $f /tmp/'

